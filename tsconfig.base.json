    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@oniki/configurator3d": ["libs/configurator3d/src/index.ts"],
      "@oniki/ui": ["libs/ui/src/index.ts"],
      "@torbenvanassche/threejswrapper": ["libs/renderer/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
